@page
@model JRPC_HMS.Pages.QRServ.Admin.QuestionsEditModel
@{
    ViewData["Title"] = "Questions Edit";
}

<section class="content-header">
    <h1>
        Question Edit
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>QRServ</li>
        <li><a href="/QRServ/Admin/QuestionsIndex">Questions</a></li>
        <li class="active">Edit</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <form method="post" class="form-horizontal">
        <div class="text-right">
            <button type="submit" class="btn btn-success" title="Save">
                <i class="far fa-save"></i>
            </button>
            <a asp-page="./QuestionsIndex" class="btn btn-danger" title="Cancel">
                <i class="fas fa-times"></i>
            </a>
        </div>
        <br />
        <!-- Default box -->
        <div class="box box-primary">
            <div class="box-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Question.Question_ID" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Question.QuestionName" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Question.QuestionName" class="form-control" />
                            <span asp-validation-for="Question.QuestionName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Question.Form_ID" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <select asp-for="Question.Form_ID" asp-items="Model.Forms" class="form-control"></select>
                            <span asp-validation-for="Question.Form_ID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Question.Description" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Question.Description" class="form-control" />
                            <span asp-validation-for="Question.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </form>
    <!-- /.box -->
</section>
<!-- /.content -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}