@page
@model JRPC_HMS.RoleCreateModel
@{
    ViewData["Title"] = "RoleCreate";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Create Role
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Admin</li>
        <li><a href="/Admin/Roles">Roles</a></li>
        <li class="active">Create</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <form method="post" class="form-horizontal">
        <div class="text-right">
            <button type="submit" class="btn btn-success" title="Save">
                <i class="far fa-save"></i> Save
            </button>
            <a asp-page="./Users" class="btn btn-danger" title="Cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <div class="box box-primary">
            <div class="box-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <label asp-for="Role.Name" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Role.Name" class="form-control" />
                            <span asp-validation-for="Role.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </form>
    <!-- /.box -->
</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}