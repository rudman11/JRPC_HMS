@page
@model JRPC_HMS.Pages.Sales.OrderDetailsModel
@{
    ViewData["Title"] = "Details";
}

<section class="content-header">
<h1>
    Order Details
</h1>
<ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li>Sales</li>
    <li>Orders</li>
    <li class="active">Details</li>
</ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="text-left">
        <a asp-page="./OrdersIndex" class="btn btn-primary" title="Back">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
    <br />
    <!-- Default box -->
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <h3><u>Details</u></h3>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Store: </b>
                            </div>
                            <div class="col-sm-8">
                                @Model.Store.StoreName
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Customer: </b>
                            </div>
                            <div class="col-sm-8">
                                @Model.Customer.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Order Status: </b>
                            </div>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.Order.OrderStatus)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Payment Status: </b>
                            </div>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.Order.PaymentStatus)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Payment Method: </b>
                            </div>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.Order.PaymentMethod)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Preparation Status: </b>
                            </div>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.Order.PreparationStatus)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Order Date: </b>
                            </div>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.Order.OrderDate)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Discount: </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.OrderDiscount)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Paid: </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.Paid)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Change: </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.Change)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>SubTotal: </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.OrderTotal)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>VAT Total </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.VatTotal)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Grand Total </b>
                            </div>
                            <div class="col-sm-8">
                                R @Html.DisplayFor(model => model.Order.GrandTotal)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3><u>Items</u></h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="50">Qty</th>
                                <th width="100"></th>
                                <th>Item</th>
                                <th width="100">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderitem in Model.OrderItemss)
                            {
                                var total = @Model.Products.FirstOrDefault(p => p.Product_ID == orderitem.Product_ID).SellingPrice * @orderitem.Quantity;
                                <tr>
                                    <td>@orderitem.Quantity</td>
                                    <td><img src="@Model.Products.FirstOrDefault(p => p.Product_ID == orderitem.Product_ID).ImageUrl" style="height:50px; width:auto;" /></td>
                                    <td>@Model.Products.FirstOrDefault(p => p.Product_ID == orderitem.Product_ID).ProductName</td>
                                    <td>R @total</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}