@page
@model JRPC_HMS.Pages.WarehousePages.SupplierDetailsModel
@{
    ViewData["Title"] = "Details";
}

<section class="content-header">
    <h1>
        Supplier Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Warehouse</li>
        <li>Supplier</li>
        <li class="active">Details</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="text-right">
        <a asp-page="./SupplierEdit" asp-route-id="@Model.Supplier.Id" class="btn btn-success" title="Edit">
            <i class="far fa-edit"></i>
        </a>
        <a asp-page="./SupplierIndex" class="btn btn-danger" title="Cancel">
            <i class="fas fa-times"></i>
        </a>
    </div>
    <br />
    <!-- Default box -->
    <div class="box box-primary">
        <div class="box-body">
            <div class="container-fluid">
                <div class="form-group">
                    <div class="col-sm-2">
                        <b>Supplier Name</b>
                    </div>
                    <div class="col-sm-10">
                        @Model.Supplier.Name
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <b>Supplier Email</b>
                    </div>
                    <div class="col-sm-10">
                        @Model.Supplier.Email
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <b>Supplier Phone</b>
                    </div>
                    <div class="col-sm-10">
                        @Model.Supplier.Phone
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <b>Supplier Address</b>
                    </div>
                    <div class="col-sm-10">
                        @Model.Supplier.Address
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <b>Supplier Contact Person</b>
                    </div>
                    <div class="col-sm-10">
                        @Model.Supplier.Contact
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}