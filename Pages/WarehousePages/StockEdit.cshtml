@page
@model JRPC_HMS.Pages.WarehousePages.StockEditModel
@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Edit Stock
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Warehouse</li>
        <li><a href="./StockIndex">Stock</a></li>
        <li class="active">Edit</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <form method="post" class="form-horizontal">
        <div class="text-right">
            <button type="submit" class="btn btn-success" title="Save">
                <i class="far fa-save"></i>
            </button>
            <a asp-page="./StockIndex" class="btn btn-danger" title="Cancel">
                <i class="fas fa-times"></i>
            </a>
        </div>
        <br />
        <div class="box box-primary">
            <div class="box-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Warehouse.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Warehouse.StockName" class="form-label col-sm-2">Stock Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Warehouse.StockName" class="form-control" />
                            <span asp-validation-for="Warehouse.StockName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warehouse.Unit" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Warehouse.Unit" class="form-control" />
                            <span asp-validation-for="Warehouse.Unit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warehouse.Price" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">R</div>
                                <input asp-for="Warehouse.Price" class="form-control" />
                                <span asp-validation-for="Warehouse.Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warehouse.InStock" class="form-label col-sm-2">In Stock</label>
                        <div class="col-sm-10">
                            <input asp-for="Warehouse.InStock" class="form-control" />
                            <span asp-validation-for="Warehouse.InStock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedTag" class="form-label col-sm-2">Supplier Name</label>
                        <div class="col-sm-10">
                            <select asp-items="Model.Suppliers" asp-for="SelectedTag" class="form-control">
                                <option value="">Select Supplier</option>
                            </select>
                            <span asp-validation-for="Warehouse.SupplierId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </form>
    <!-- /.box -->
</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }
    </script>
}