@model JRPC_HMS.Models.TopCountsViewModel

<div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-aqua">
        <div class="inner">
            <h3>@Model.AllOrdersCount</h3>
            <p>Total Orders</p>
        </div>
        <div class="icon">
            <i class="fas fa-shopping-cart"></i>
        </div>
        <a asp-page="/Sales/OrdersIndex" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
    </div>
</div>
<!-- ./col -->
<div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-yellow">
        <div class="inner">
            <h3>@Model.IncompleteOrderCount</h3>
            <p>Incompleted Orders</p>
        </div>
        <div class="icon">
            <i class="fas fa-cart-arrow-down"></i>
        </div>
        <a asp-page="/Sales/OrdersIndex" asp-route-orderStatus="Incompleted" asp-route-currentpage="1" asp-route-pageSize="10" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
    </div>
</div>
<!-- ./col -->
